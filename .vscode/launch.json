    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: MD2HTML with test file",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["-md2html", "test/data/test_input.md"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Show Help",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "args": ["-h"],
            "console": "integratedTerminal"
        }
    ]
}